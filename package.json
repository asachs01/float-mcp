{
  "name": "float-mcp",
  "version": "0.2.2",
  "description": "MCP server for Float.com integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node --esm src/index.ts",
    "test": "NODE_OPTIONS='--loader ts-node/esm' jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "NODE_OPTIONS='--loader ts-node/esm' jest --testPathPattern=integration --passWithNoTests",
    "test:integration:mock": "NODE_OPTIONS='--loader ts-node/esm' TEST_MOCK_MODE=true TEST_REAL_API=false jest --testPathPattern=integration --passWithNoTests",
    "test:integration:real": "NODE_OPTIONS='--loader ts-node/esm' TEST_REAL_API=true TEST_MOCK_MODE=false jest --testPathPattern=integration --passWithNoTests",
    "test:performance": "NODE_OPTIONS='--loader ts-node/esm' TEST_SKIP_SLOW=false jest --testPathPattern=performance --passWithNoTests",
    "test:compatibility": "NODE_OPTIONS='--loader ts-node/esm' jest --testPathPattern=compatibility --passWithNoTests",
    "test:schemas": "NODE_OPTIONS='--loader ts-node/esm' jest --testPathPattern=schema --passWithNoTests",
    "test:all": "npm run test && npm run test:integration:mock",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src tests",
    "clean": "rm -rf dist",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "mcp",
    "float",
    "project-management",
    "task-management"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/float-mcp.git"
  },
  "homepage": "https://github.com/yourusername/float-mcp#readme",
  "bugs": {
    "url": "https://github.com/yourusername/float-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^5.2.5",
    "pino": "^8.19.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
