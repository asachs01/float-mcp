{
  "mcpServers": {
    "float-mcp": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "--env-file", "/Users/yourusername/path/to/float-mcp/.env",
        "ghcr.io/yourusername/float-mcp:latest",
        "node", "dist/index.js", "--mcp"
      ],
      "env": {
        "FLOAT_API_KEY": "your_float_api_key_here",
        "FLOAT_API_BASE_URL": "https://api.float.com/v3",
        "NODE_ENV": "production",
        "LOG_LEVEL": "error",
        "LOG_FORMAT": "json"
      }
    }
  }
} 